<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.selinali.tribbble">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TribbbleApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="me.selinali.tribbble.ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TranslucentBars">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="me.selinali.tribbble.ui.shot.ShotActivity"
            android:parentActivityName="me.selinali.tribbble.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TranslucentStatusBar">
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="@string/fabric_api_key"/>

    </application>

</manifest>
